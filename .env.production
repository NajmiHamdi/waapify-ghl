# Production Environment Variables for RunCloud
# Copy these to your RunCloud Environment Variables section

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Update with your RunCloud database credentials)
DB_HOST=localhost
DB_USER=waapify_user
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_NAME=waapify_ghl

# GHL OAuth Configuration
GHL_CLIENT_ID=YOUR_GHL_CLIENT_ID
GHL_CLIENT_SECRET=YOUR_GHL_CLIENT_SECRET
GHL_REDIRECT_URI=https://waaghl.waapify.com/authorize-handler

# Optional: Backup system for auto-recovery
INSTALLATION_BACKUP=[]

# Security (Generate random strings for production)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production